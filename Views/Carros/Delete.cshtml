@model Cars.Models.Carro

@{
    ViewData["Title"] = "Excluir carro";
}

<h2>Excluir realmente este carro?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarroId)
        </dd>
        <dt>
            Marca
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt>
            Data da compra
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataCompra)
        </dd>
        <dt>
            Descrição
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt>
            Cor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cor)
        </dd>
    </dl>
    @ViewData["Message"]
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarroId" />
        <input type="submit" value="Excluir" class="btn btn-default" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>